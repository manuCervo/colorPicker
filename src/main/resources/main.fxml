<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="797.0" prefWidth="1117.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <left>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                <Pane fx:id="colorPane" prefHeight="200.0" prefWidth="200.0" />
                <Label text="RGB">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <GridPane>
                    <Slider fx:id="redSlider" max="255" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Slider fx:id="greenSlider" max="255" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Slider fx:id="blueSlider" max="255" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="redLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="greenLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="blueLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                    <columnConstraints>
                        <ColumnConstraints minWidth="25.0" percentWidth="0.0" />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
                <Label text="HSV">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <GridPane>
                    <Slider fx:id="hueSlider" max="359" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Slider fx:id="saturationSlider" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Slider fx:id="valueSlider" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="hueLabel" text="   " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="saturationLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="valueLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                    <columnConstraints>
                        <ColumnConstraints minWidth="25.0" percentWidth="0.0" />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </GridPane>
                <TextField fx:id="rgbTextField" />
                <TextField fx:id="normalizedRgbTextField" />
                <TextField fx:id="hexTextField" />
                <TextField fx:id="hsvTextField" />

                <Button fx:id="pickButton" mnemonicParsing="false" text="pick" />
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
            </VBox>
        </left>
        <center>
            <HBox>
                <VBox spacing="10.0" BorderPane.alignment="CENTER" HBox.hgrow="NEVER">
                    <HBox spacing="10.0">
                        <VBox>
                            <Label text="complementary" VBox.vgrow="NEVER" />
                            <HBox fx:id="complementaryHBox" VBox.vgrow="ALWAYS" />
                        </VBox>
                        <VBox>
                            <Label text="tetradic" VBox.vgrow="NEVER" />
                            <HBox fx:id="tetradicHBox" VBox.vgrow="ALWAYS" />
                        </VBox>
                    </HBox>
                    <HBox spacing="10.0">
                        <VBox>
                            <Label text="triadic" VBox.vgrow="NEVER" />
                            <HBox fx:id="triadicHBox" VBox.vgrow="ALWAYS" />
                        </VBox>
                        <VBox>
                            <Label text="split complementary" VBox.vgrow="NEVER" />
                            <HBox fx:id="splitComplementaryHBox" VBox.vgrow="ALWAYS" />
                        </VBox>
                    </HBox>
                    <VBox>
                        <Label text="analogous" VBox.vgrow="NEVER" />
                        <HBox fx:id="analogousHBox" VBox.vgrow="ALWAYS" />
                    </VBox>
                    <VBox>
                        <Label text="monochromatic" VBox.vgrow="NEVER" />
                        <HBox fx:id="monochromaticHBox" VBox.vgrow="ALWAYS" />
                    </VBox>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
                </VBox>
                <ScrollPane fitToWidth="true" HBox.hgrow="ALWAYS">
                    <FlowPane fx:id="colorsContainer" hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
                    </FlowPane>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
                </ScrollPane>
            <BorderPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            </HBox>
        </center>
